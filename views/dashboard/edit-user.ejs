<%- include('../partials/dashboard/dashboard-header') %>
    <div class="container">
        <form action="/admin/edit-user/<%= siswa._id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" data-default-value="<%= siswa.nama %>" id="nama" class="form-control" name="nama">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" data-default-value="<%= siswa.email %>" id="email"
                    name="email">
            </div>
            <div class="mb-3">
                <label for="kelas" class="form-label">Kelas</label>
                <input type="text" class="form-control" data-default-value="<%= siswa.kelas %>" id="kelas" name="kelas">
            </div>
            <div class="mb-3">
                <label for="kelasId" class="form-label">Kelas ID</label>
                <input type="text" class="form-control" data-default-value="<%= siswa.kelasId %>" id="kelasId"
                    name="kelasId">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Nomor Absen </label>
                <input type="number" class="form-control" data-default-value="<%= siswa.noAbsen %>" id="noAbsen"
                    name="noAbsen">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <select class="form-select mb-3" aria-label="Default select example" id="role"
                data-default-value="<%= siswa.role %>" name="role">
                <option selected>Role</option>
                <option value="guru">Guru</option>
                <option value="murid">Murid</option>
            </select>
            <div class="form-check mb-3">

                <input class="form-check-input" type="checkbox" <% if(user.isAdmin){%> checked<%} %> name="isAdmin"
                    value="true"
                    data-default-value="<%= siswa.isAdmin %>" id="admin" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            isAdmin
                        </label>
            </div>
            <div class="input mb-3">
                <label for="url" class="form-label">Foto :</label>
                <input class="form-control" type="file" id="formFile" name="foto">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <script>
        const list = ["nama", 'email', 'noAbsen', 'kelas', 'kelasId', "role", "foto"]

        list.forEach(e => {
            const nameTag = document.getElementById(e)
            nameTag.value = nameTag.getAttribute('data-default-value')
        })
    </script>
    <%- include('../partials/dashboard/dashboard-footer') %>