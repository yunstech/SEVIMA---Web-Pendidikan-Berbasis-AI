<%- include('../partials/dashboard/dashboard-header') %>
    <div style="width: 50%; margin: 20px auto;" class="text-center">

        <% if(msg){ %> <%- msg %>
                <% } %>
    </div>

    <div class="container">
        <form action="/admin/tambah-user" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" class="form-control" name="nama">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
                <label for="kelas" class="form-label">Kelas</label>
                <input type="text" class="form-control" name="kelas">
            </div>
            <div class="mb-3">
                <label for="kelasId" class="form-label">Kelas ID</label>
                <input type="text" class="form-control" name="kelasId">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Nomor Absen</label>
                <input type="number" class="form-control" name="noAbsen">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <select class="form-select mb-3" aria-label="Default select example" name="role">
                <option selected>Role</option>
                <option value="guru">Guru</option>
                <option value="murid">Murid</option>
            </select>
            <div class="input mb-3">
                <label for="url" class="form-label">Foto :</label>
                <input class="form-control" type="file" id="formFile" name="url">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%- include('../partials/dashboard/dashboard-footer') %>