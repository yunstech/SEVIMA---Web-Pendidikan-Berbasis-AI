<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quiz</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="/asset/img/eduai.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <section class="quiz-top-bar">
        <h3>Soal : <%= quiz.title %>
        </h3>
        <h3>Waktu : <%= quiz.waktuPengerjaan %>
        </h3>
    </section>

    <section class="quiz-main">
        <div class="container mx-auto">
            <div class="body-quiz">
                <h2 class="soal">
                    <%= soal.soal %>
                </h2>
                <form action="/quiz/submit/<%= quiz._id %>/<%= soal._id %>">
                    <ul class="pilihan">
                        <li class="jawaban">
                            <input class="form-check-input" type="radio" name="jawabanQuiz" id="jawabanQuiz1">
                            <label class="form-check-label" for="jawabanQuiz1" value="A">
                                A : <%= soal.jawaban[0]["A"] %>
                            </label>
                        </li>
                        <li class="jawaban">
                            <input class="form-check-input" type="radio" name="jawabanQuiz" id="jawabanQuiz1">
                            <label class="form-check-label" for="jawabanQuiz1" value="B">
                                B : <%= soal.jawaban[0]["B"] %>
                            </label>
                        </li>
                        <li class="jawaban">
                            <input class="form-check-input" type="radio" name="jawabanQuiz" id="jawabanQuiz1">
                            <label class="form-check-label" for="jawabanQuiz1" value="C">
                                C : <%= soal.jawaban[0]["C"] %>
                            </label>

                        </li>
                        <li class="jawaban">
                            <input class="form-check-input" type="radio" name="jawabanQuiz" id="jawabanQuiz1">
                            <label class="form-check-label" for="jawabanQuiz1" value="D">
                                D : <%= soal.jawaban[0]["D"] %>
                            </label>
                        </li>
                        <li class="jawaban">
                            <input class="form-check-input" type="radio" name="jawabanQuiz" id="jawabanQuiz1">
                            <label class="form-check-label" for="jawabanQuiz1" value="E">
                                E : <%= soal.jawaban[0]["E"] %>
                            </label>
                        </li>
                    </ul>
                    <% if(param===quiz.jumlahSoal+1){%>
                        <!-- <a href="/quiz/<%=quiz._id%>/<%= param %>"><button
                                class="btn btn-quiz btn-primary">Submit</button></a> -->
                        <button type="submit" class="btn btn-quiz btn-primary">Submit</button>
                        <%}else{%>
                            <!-- <a href="/quiz/<%=quiz._id%>/<%= param %>"><button
                                    class="btn btn-quiz btn-primary">Next</button></a> -->
                            <button type="submit" class="btn btn-quiz btn-primary">Lanjut</button>
                            <%} %>

                </form>


            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>